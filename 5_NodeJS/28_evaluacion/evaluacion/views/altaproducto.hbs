<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Alta de productos</h1>
    </div>
</section>
<div class="container">
    <form action="/productos/alta" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="txtNombre">Nombre</label>
            <input class="form-control" id="txtNombre" name="nombre" placeholder="Nombre">
        </div>
        <div class="form-group">
            <label for="txtDescripcion">Descripción</label>
            <textarea class="form-control" rows="2" name="descripcion" id="txtDescripcion" placeholder="Descripción"></textarea>
        </div>
        <div class="form-group">
            <label for="txtPrecio">Precio</label>
            <input class="form-control" id="txtPrecio" name="precio" placeholder="Precio">
        </div>
        <div class="form-group">
            <label for="flImagen">Foto</label>
            <input class="form-control" id="flImagen" name="imagen" placeholder="Foto">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>